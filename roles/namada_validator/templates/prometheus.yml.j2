global:
  scrape_interval: 15s
  scrape_timeout: 10s
  evaluation_interval: 15s

  external_labels:
    environment: '{{ ansible_hostname }}'
    hostname: '{{ ansible_hostname }}'

remote_write:
  - url: {{ prometheus_endpoint }}

rule_files:
  - /etc/prometheus/rules/*.yml
  - /etc/prometheus/rules/*.yaml
  - /etc/prometheus/rules/*.rules

scrape_configs:
  - job_name: namada
    static_configs:
    - targets:
      - localhost:3001
      labels:
        host: '{{ ansible_hostname }}'



scrape_config_files:
  - scrape_configs/*