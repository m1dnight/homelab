services:
  #-----------------------------------------------------------
  # Watchtower

  watchtower:
    image: containrrr/watchtower
    restart: unless-stopped
    environment:
      - WATCHTOWER_POLL_INTERVAL=6
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock

  # #-----------------------------------------------------------
  # # Recyclarr

  # recyclarr:
  #   image: ghcr.io/recyclarr/recyclarr
  #   container_name: recyclarr
  #   environment:
  #     - PUID="{{ ansible_user_uid }}"
  #     - PGID="{{ ansible_user_gid}}"
  #     - TZ="{{ timezone }}"
  #   volumes:
  #     - ./volumes/recyclarr:/config
  maintainerr:
    image: ghcr.io/jorenn92/maintainerr:latest # or jorenn92/maintainerr:latest
    environment:
      - PUID="{{ ansible_user_uid }}"
      - PGID="{{ ansible_user_gid}}"
      - TZ="{{ timezone }}"
    volumes:
      - ./volumes/maintainerr:/opt/data
    ports:
      - 6246:6246
    restart: unless-stopped

  #-----------------------------------------------------------
  # Sonarr

  sonarr:
    image: lscr.io/linuxserver/sonarr
    container_name: sonarr
    environment:
      - PUID="{{ ansible_user_uid }}"
      - PGID="{{ ansible_user_gid}}"
      - TZ="{{ timezone }}"
    volumes:
      - ./volumes/sonarr:/config
      - /mnt/series:/tv
      - /mnt/torrents:/downloads
    ports:
      - 8989:8989
    restart: unless-stopped

  #-----------------------------------------------------------
  # Radarr

  radarr:
    image: lscr.io/linuxserver/radarr
    restart: unless-stopped
    container_name: radarr
    environment:
      - PUID="{{ ansible_user_uid }}"
      - PGID="{{ ansible_user_gid}}"
      - TZ="{{ timezone }}"
    volumes:
      - ./volumes/radarr:/config
      - /mnt/movies:/movies
      - /mnt/torrents:/downloads
    ports:
      - 7878:7878

  #-----------------------------------------------------------
  # Bazarr

  bazarr:
    image: lscr.io/linuxserver/bazarr
    restart: unless-stopped
    container_name: bazarr
    environment:
      - PUID="{{ ansible_user_uid }}"
      - PGID="{{ ansible_user_gid}}"
      # - TZ={{ timezone }}
    volumes:
      - ./volumes/bazarr:/config
      - /mnt/movies:/movies
      - /mnt/series:/tv
    ports:
      - 6767:6767

  #-----------------------------------------------------------
  # Jackett

  jackett:
    image: lscr.io/linuxserver/jackett
    restart: unless-stopped
    container_name: jackett
    environment:
      - PUID="{{ ansible_user_uid }}"
      - PGID="{{ ansible_user_gid}}"
      - TZ={{ timezone }}
      - AUTO_UPDATE=true
    volumes:
      - ./volumes/jackett:/config
    ports:
      - 9117:9117
  #-----------------------------------------------------------
  # Lidarr

  lidarr:
    image: lscr.io/linuxserver/lidarr:latest
    container_name: lidarr
    environment:
      - PUID="{{ ansible_user_uid }}"
      - PGID="{{ ansible_user_gid}}"
      - TZ={{ timezone }}
    volumes:
      - ./volumes/lidarr/config:/config
      - /mnt/music:/mnt/music #optional
      - /mnt/torrents/complete/lidarr:/mnt/torrents/complete/lidarr #optional
    ports:
      - 8686:8686
    restart: unless-stopped

  #-----------------------------------------------------------
  # Headphones

  headphones:
    image: lscr.io/linuxserver/headphones:latest
    container_name: headphones
    environment:
      - PUID="{{ ansible_user_uid }}"
      - PGID="{{ ansible_user_gid}}"
      - TZ={{ timezone }}
    volumes:
      - ./volumes/lidarr/config:/config
      - /mnt/music:/mnt/music:ro #optional
      - /mnt/torrents/complete/lidarr:/mnt/torrents/complete/lidarr #optional
    ports:
      - 8181:8181
    restart: unless-stopped
